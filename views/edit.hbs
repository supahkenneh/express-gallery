<h1 id="main_header">Edit This Photo</h1>
<form action="/gallery/{{photo.id}}" enctype="application/x-www-form-urlencoded" method="POST">
<input type="hidden" name="_method" value="PUT">
  <h1 class="new_inputs">Author:
    <br>
    <input type="text" name="author" class="simple_line" value="{{photo.author}}">
  </h1>
  <h1 class="new_inputs">Link:
    <br>
    <input type="text" name="link" class="simple_line" value="{{photo.link}}">
  </h1>
  <h1 class="new_inputs">Description:
    <br>
    <textarea name="description" id="description">{{photo.description}}</textarea>
  </h1>
  <input type="submit" value="Submit" id="submit_button">
</form>