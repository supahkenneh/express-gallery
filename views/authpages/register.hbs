<h1 id="normal_header">register</h1>
<div id="auth_message">{{message}}</div>
<div id="form_body">
  <form action="/register" enctype="application/x-www-form-urlencoded" method="POST">
    <h1 class="header_input">username:
      <br>
      <input type="text" name="username" class="simple_line" value="{{username}}">
    </h1>
    <h1 class="header_input"> password:
      <br>
      <input type="password" name="password" class="simple_line" id="password_input" onchange="check();">
    </h1>
    <h1 class="header_input"> name:
      <br>
      <input type="text" name="name" class="simple_line" value="{{name}}">
    </h1>
    <h1 class="header_input"> email:
      <br>
      <input type="text" name="email" class="simple_line" value="{{email}}">
    </h1>
    <input type="submit" value="register" id="register_button">
  </form>
  <div id="back">
    <a href="http://localhost:3005/" id="register_back"> back </a>
  </div>
</div>