<div id="gallery_body">
  <div id="secondary_header">
    {{#if username}}
    <div id="username">logged in as:
      <br>
      <a href="/users/{{username}}" id="user_link">{{username}}</a>
    </div>
    <div id="new_pic">
      <a href="/gallery/new" id="post_button">post a picture</a>
    </div>
    <br>
    <div id="logout">
      <a href="/logout" id="logout_button">logout</a>
    </div>
    {{/if}}
    <div id="side_messages">{{message}}</div>
  </div>
  {{#if registration}}
  <div id="auth_body">
    <div id="home_register">
      <a href="/register" class="home_register">register</a>
    </div>
    <br>
    <br>
    <div id="home_login">
      <a href="/login" class="home_login">login</a>
    </div>
  </div>
  {{/if}}
  <div id="pictures">
    <div class="image_div">
      <a href="/gallery/{{firstpic.id}}">
        <img src="{{firstpic.attributes.link}}" alt="image" id="first_image" height="733" width="1100">
      </a>
    </div>
    <a href="/users/{{firstpic.attributes.author}}">
      <div class="author_div">@{{firstpic.attributes.author}}</div>
    </a>
    <div class="description_div">{{firstpic.attributes.title}}</div>
    <div id="picture_grid">
      {{#each gallery}}
      <div class="cards">
        <div class="card_image">
          <a href="/gallery/{{this.id}}">
            <img src="{{this.attributes.link}}" alt="image" id="small_img">
          </a>
        </div>
        <a href="/users/{{this.attributes.author}}">
          <div class="card_author">@{{this.attributes.author}}</div>
        </a>
        <div class="card_desc">{{this.attributes.title}}</div>
      </div>
      {{/each}}
    </div>
  </div>
</div>